<% provide(:title, "Messages") %>
<p id="notice"><%= notice %></p>

<div class="message-index">
  <h1>All messages here!!!</h1>
  <%= link_to 'New Message', new_message_path, :class=>"new text-success" %>
</div>

  <div class="container"> 
    <div class="row">
      <div class="col-md-3">
        <p class="text-danger"><strong>Title</strong></p>
      </div>
      <div class="col-md-5">
        <p class="text-danger"><strong>Content</strong></p>
      </div>
      <div class="col-md-3">
        <p class="text-danger"><strong>Picture</strong></p>
      </div>
    </div>  
    <% @messages.each do |message| %>
      <div class="row">
        <div class="col-md-3">
          <p><%= message.title %></p>
        </div>
        <div class="col-md-5">
          <p><%= message.content %></p>
        </div>
        <div class="col-md-2">
          <p><%= image_tag message.picture.url, class: "style-image" %></p>
        </div>
        <div class="col-md-1">
          <%= link_to 'Show', message, class: "edit" %>
          <%= link_to 'Edit', edit_message_path(message), class: "edit" %>
          <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: "edit" %>
        </div>
      </div>
    <% end %>
    
  </div>
